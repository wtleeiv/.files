syntax enable
filetype indent on

map! <Home> <Esc>

set number
set showcmd
set cursorline
set wildmenu
set lazyredraw
set showmatch
set incsearch
set hlsearch
set ignorecase
set smartcase

nnoremap j gj
nnoremap k gk
nnoremap B ^
nnoremap E $

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
